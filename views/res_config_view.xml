<odoo>
    <record id="view_users_form_inherit_sales_forecast" model="ir.ui.view">
        <field name="name">res.users.form.inherit.sales.forecast</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
           
            <!-- Add your boolean field in the main user form -->
            <xpath expr="//div[@class='oe_title']/h1/field[@name='name']" position="after">
            </xpath>
            <xpath expr="//div[@class='oe_title']" position="inside">
                <group string="Forecast Access">
                    <field name="access_forecast" />
                    <field name="access_sales_forecast" />
                     <field name="access_mfg_forecast" />
                </group>
            </xpath>
        </field>
    </record>
    

</odoo>

    