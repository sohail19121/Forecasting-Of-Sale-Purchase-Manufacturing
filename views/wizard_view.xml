<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_mrf_component_wizard_form" model="ir.ui.view">
    <field name="name">mrf.component.wizard.form</field>
    <field name="model">mrf.component.wizard</field>
    <field name="arch" type="xml">
        <form string="Required Components">
            <group>
                <field name="line_ids" readonly="1">
                    <list create="false" delete="false">
                        <field name="forecast_date"/>
                        <field name="component_id"/>
                        <field name="forecast_qty"/>
                       
                    </list>
                </field>
            </group>
            <footer>
                <button string="Close" special="cancel" class="btn-secondary"/>
            </footer>
        </form>
    </field>
</record>

</odoo>
