<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="manufacturing_forecast_view_form" model="ir.ui.view">
        <field name="name">manufacturing.forecast.view.form</field>
        <field name="model">manufacturing.forecast</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="start_date" />
                        <field name="end_date"/>
                        <field name="product_id" />
                    </group>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_generate_manufacturing_forecast" type="object" class="oe_stat_button"  string="Checking Forecast" />
                       
                    </div>
                    <notebook>
                        <page string="Forecast Lines">
                            <field name="forecast_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="forecast_date"/>
                                    <field name="quantity"/>
                                    <field name="is_historical"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
    <record id="manufacturing_forecast_view_list" model="ir.ui.view">
        <field name="name">manufacturing.forecast.view.list</field>
        <field name="model">manufacturing.forecast</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
                
            </list>
        </field>

    </record>

    <record id="manufacturing_forecast_action" model="ir.actions.act_window">
        <field name="name">Manufacturing Forecast</field>
        <field name="res_model">manufacturing.forecast</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="manufacturing_forecast_view_list"/>

    </record>

    


</odoo>
