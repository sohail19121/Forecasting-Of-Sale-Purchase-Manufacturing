<odoo>
    <record id="res_config_settings_view_form_inherit_purchase_forecast" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase.forecast</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='purchase_setting_container']" position="after">
                <block title="Purchase Forecast" name="forecasting_setting_container">
                    <setting id="purchase_forecast_granularity_setting"
                             string="Purchase Forecast"
                             help="Choose forecasting model to set as default">
                        <field name="company_main"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
