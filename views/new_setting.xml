<odoo>
    <record id="view_sales_forecast_settings" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.forecast</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Inject into the Pricing block -->
            <xpath expr="//block[@id='pricing_setting_container']" position="after">
                <block title="Forecast Settings" id="forecast_settings_container">
                    <setting id="forecast_default_method_setting" help="Set the default forecasting algorithm to be used in forecasting module.">
                        <field name="forecast_default_method"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>